collectives = mcollective
main_collective = mcollective
libdir = /usr/libexec/mcollective
logfile = /var/log/mcollective.log
loglevel = info
daemonize = 1
identity = <%= @fqdn %>

securityprovider = none

direct_addressing = yes
direct_addressing_threshold = 5

# ActiveMQ connector settings:
plugin.activemq.pool.size = 1
plugin.activemq.pool.1.host = <%= @middleware_ip %>
plugin.activemq.pool.1.port = 6163
plugin.activemq.pool.1.user = mcollective
plugin.activemq.pool.1.password = marionette
plugin.activemq.pool.1.ssl = 0
plugin.activemq.heartbeat_interval = 60

factsource = yaml
plugin.yaml = /etc/mcollective/facts.yaml
classesfile = /etc/mcollective/classes.txt

registration = meta
registration_collective = mcollective
registerinterval = 60

rpcaudit = 1
rpcauditprovider = logfile
plugin.rpcaudit.logfile = /var/log/mcollective-audit.log
